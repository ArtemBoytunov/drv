<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F0F0F1"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context=".AdminAddNewProductActivity">

    <ImageView
        android:id="@+id/select_product_image"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_centerHorizontal="true"
        android:cropToPadding="false"
        android:scaleType="centerCrop"
        android:src="@drawable/choose" />

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/box"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="280dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/product_departament"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/product_name"
                    android:layout_alignParentStart="true"
                    android:background="@drawable/input_design"
                    android:fontFamily="@font/roboto"
                    android:gravity="center_vertical"
                    android:hint="Откуда"
                    android:inputType="textMultiLine"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="16sp"
                    tools:gravity="center_vertical" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="3dp"
                    android:background="#DDD"
                    android:orientation="horizontal"></LinearLayout>

                <EditText
                    android:id="@+id/product_coming"
                    android:layout_width="match_parent"
                    android:layout_height="36dp"
                    android:layout_below="@+id/product_name"
                    android:layout_alignParentEnd="false"
                    android:background="@drawable/input_design"
                    android:gravity="center_vertical"
                    android:hint="Куда"
                    android:inputType="textMultiLine"
                    android:paddingLeft="20dp"
                    android:textColor="#000000"
                    android:textColorHint="#808080"
                    android:textSize="16sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/arrow" />

        </LinearLayout>

    </LinearLayout>

    <EditText
        android:id="@+id/productDepartament"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/select_product_image"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:gravity="center_vertical"
        android:hint="ФИО"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/product_name"
        android:layout_width="320dp"
        android:layout_height="90dp"
        android:layout_below="@+id/productDepartament"
        android:layout_marginTop="20dp"
        android:background="@drawable/input_design"
        android:gravity="center_vertical"
        android:hint="Описание"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="16sp" />


    <EditText
        android:id="@+id/product_price"
        android:layout_width="320dp"
        android:layout_height="40dp"
        android:layout_below="@+id/product_name"
        android:layout_marginTop="6dp"
        android:background="@drawable/input_design"
        android:gravity="center_vertical"
        android:hint="Стоимость"
        android:inputType="textMultiLine"
        android:paddingLeft="20dp"
        android:textColor="#000000"
        android:textColorHint="#808080"
        android:textSize="16sp"
        tools:layout_marginTop="20dp" />


    <Button
        android:id="@+id/add_new_product"
        android:layout_width="320dp"
        android:layout_height="60dp"
        android:layout_below="@+id/product_price"
        android:layout_marginTop="20dp"
        android:background="@drawable/buttons"
        android:gravity="center_horizontal|center_vertical"
        android:text="Добавить"
        android:textAllCaps="false"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

</LinearLayout>